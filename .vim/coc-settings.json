{
  // OLD: More verbose inlay hints, shows everything
  // Enable parameter name hints (you can choose "literals" or "all")
  // "typescript.inlayHints.parameterNames.enabled": "all",
  // "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,

  // TypeScript
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,

  // JavaScript
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.parameterTypes.enabled": false,
  "javascript.inlayHints.variableTypes.enabled": false,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": false,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  "javascript.inlayHints.enumMemberValues.enabled": false,

  // // New: More minimal inlay hints
  // // =====================
  // // Inlay Hints (TypeScript)
  // // =====================
  // "typescript.inlayHints.parameterNames.enabled": "literals",
  // "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  // "typescript.inlayHints.parameterTypes.enabled": true,
  // "typescript.inlayHints.variableTypes.enabled": false,
  // "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  // "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  // "typescript.inlayHints.enumMemberValues.enabled": true,

  // // =====================
  // // Inlay Hints (JavaScript)
  // // =====================
  // "javascript.inlayHints.parameterNames.enabled": "literals",
  // "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  // "javascript.inlayHints.parameterTypes.enabled": true,
  // "javascript.inlayHints.variableTypes.enabled": false,
  // "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  // "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  // "javascript.inlayHints.enumMemberValues.enabled": true,

  // =====================
  // Completion & Suggestions
  // =====================
  "typescript.suggest.completeFunctionCalls": true,
  "javascript.suggest.completeFunctionCalls": true,

  // =====================
  // Imports & Renames
  // =====================
  "typescript.preferences.useAliasesForRenames": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // // =====================
  // // Formatting Preferences
  // // =====================
  // "typescript.preferences.quoteStyle": "single",
  // "javascript.preferences.quoteStyle": "single",

  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

  // =====================
  // Coc Formatting on Save
  // =====================
  // Using eslint now so don't need this.. enable if issues
  "coc.preferences.formatOnSave": true,

  "languageserver": {
    "tailwindcss": {
      "command": "tailwindcss-language-server",
      "filetypes": ["html", "jsx", "tsx"],
      "rootPatterns": [
        "**/{tailwind,tailwind.config,tailwind-config,.tailwindrc}.js",
        ".git"
      ]
    }
  },
  // `:h coc-config-float`
  "suggest.floatConfig": {
    "border": true
  },
  "diagnostic.floatConfig": {
    "border": true
  },
  "signature.floatConfig": {
    "border": true
  },
  "hover.floatConfig": {
    "border": true
  },

  "git.addedSign.hlGroup": "CocGitSignAdded",
  "git.changedSign.hlGroup": "CocGitSignChanged",
  "git.removedSign.hlGroup": "CocGitSignRemoved",
  "git.topRemovedSign.hlGroup": "CocGitSignRemoved",
  "git.changeRemovedSign.hlGroup": "CocGitSignChanged",

  "git.addedSign.text": " ",
  "git.changedSign.text": " ",
  "git.removedSign.text": " ",

  "suggest.enablePreselect": false,
  "suggest.noselect": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "suggest.completionItemKindLabels": {
    "method": "󰆧 ",
    "function": "󰊕 ",
    "variable": " ",
    "field": " ",
    "class": " ",
    "interface": " ",
    "module": " ",
    "property": " ",
    "enum": " ",
    "snippet": " ",
    "text": "󰦨 ",
    "file": "󰈙 ",
    "folder": "󰉋 ",
    "keyword": "󰌋 "
  }
}
